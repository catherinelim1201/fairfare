<div class="container">
  <h1>Your contact list</h1>

  <% @contacts.each do |contact| %>
    <div class="card contact-card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= contact.member.given_nickname(current_user) %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.member.phone_number %></h6>
      </div>
    </div>
  <% end %>
</div>
