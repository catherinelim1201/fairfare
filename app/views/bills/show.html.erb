<body class="container-color">
<div>

  <div class="mt-5 d-flex">
    <%= link_to "Back", split_path(@bill.split), class: "back-button standard-button white-pink-button" %>
    <%= link_to "Edit", split_bill_items_path(@bill.split, @bill), class:"back-button" %>
  </div>
  <div class="container">
    <h1 class="mt-5"><%= @bill.merchant %></h1>
    <h2><%= "SGD #{format('%.2f', @bill.total_amount/100.00)}" %></h2>
    <% @bill.payers.each do |payer| %>
      <div>
        <h3>Payer: <%= payer.member.given_nickname(@bill.split.user) %></h3>
      </div>
    <% end %>
    <div>
      <% @bill.items.each do |item| %>
        <div class="splits-summary-card my-3">
          <%= item.name %>
          <%= "X #{item.quantity}" %>
          <%= "SGD #{item.price/100.00}" %>
          <% item.members.each do |member| %>
            <div class="d-flex mt-3">
              <i class="fa-solid fa-user fs-5"></i>
              <p class="mx-2 mt-0"><%= member.given_nickname(@bill.split.user) %></p>
              <p><%= "SGD #{format('%.2f', (item.price/100.00)/item.members.count)}" %></p>

            </div>
          <% end %>
        </div>

      <% end %>
    </div>
  </div>
  <div class="my-5">
  </div>
  <div>
  </div>
  <div class="row justify-content-center">
    <div class="col splits-summary-card my-3">
      <%= "GST: SGD #{format('%.2f', @bill.taxes/100.00)}" %>
      <%= "Discount: SGD #{format('%.2f', @bill.discount/100.00)}" %>
      <%= "Service Charge: SGD #{format('%.2f', @bill.service_charge/100.00)}" %>
    </div>
  </div>

  <div class="my-5">
  </div>
</div>
</body>
