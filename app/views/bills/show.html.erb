<body class="container-color">
<div>

  <div class="mt-5">
    <%= link_to "Back", split_path(@bill.split), class: "back-button m-3" %>
    <%= link_to "Edit", split_bill_items_path(@bill.split, @bill), class:"back-button" %>
  </div>
  <div class="container">
    <h1 class="mt-5"><%= @bill.merchant %></h1>
    <h2><%= "SGD #{cents_to_dollars(@bill.total_amount)}" %></h2>
    <% @bill.payers.each do |payer| %>
      <div>
        <h3>Payer: <%= payer.member.given_nickname(@bill.split.user) %></h3>
      </div>
    <% end %>
    <div>
      <% @bill.items.each do |item| %>
        <div class="splits-summary-card my-3">
          <%= item.name %>
          <%= "X #{item.quantity}" %>
          <%= "SGD #{item.price/100.00}" %>
          <% item.members.each do |member| %>
            <div class="d-flex mt-3">
              <i class="fa-solid fa-user fs-5"></i>
              <p class="mx-2 mt-0"><%= member.given_nickname(@bill.split.user) %></p>
              <p><%= "SGD #{cents_to_dollars(item.price/item.members.count)}" %></p>

            </div>
          <% end %>
        </div>

      <% end %>
    </div>
  </div>
  <div class="my-5">
  </div>
  <div>
  </div>
  <div class="row justify-content-center">
    <div class="splits-summary-card my-3 col-11">
      <%= "Taxes: SGD #{cents_to_dollars(@bill.taxes)}" %>
      <br>
      <br>
      <%= "Service Charge: SGD #{cents_to_dollars(@bill.service_charge)}" %>
    </div>
  </div>

  <div class="my-5">
  </div>
</div>
</body>
