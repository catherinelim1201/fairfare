<%# header - split name %>
<div class="container text-center pt-5 m-5" >
  <div class="row">
    <div class="col text-center">
      <h1><%= @split.name.upcase %></h1>
    </div>
  </div>
</div>

<div class="container text-left" data-controller="bills-manual-input" >
  <%= simple_form_for [@split, @bill] do |f| %>
    <%= f.input :merchant %>

    <div class="items" >
      <div class="align-items-center" data-bills-manual-input-target="addInputElement">
        <%= render 'item_form_input', f: f %>
        <%# <%= f.submit value="Add More" %>
      </div>

      <button class="btn-lg" data-action="click->bills-manual-input#addForm" >
        Add More
      </button>
    </div>

  <% end %>

  <div class="row mt-5">
    <div class="col">
      <div class="input-group  mb-3" data-bills-manual-input-target="taxInput">
        <span class="input-group-text" id="inputGroup-sizing-sm">GST</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing">
      </div>
    </div>

    <div class="col">
      <div class="input-group  mb-3" data-bills-manual-input-target="taxInput">
        <span class="input-group-text" id="inputGroup-sizing-sm">Service Tax</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing">
      </div>
    </div>

    <div class="col">
      <div class="input-group  mb-3" data-bills-manual-input-target="taxInput">
        <span class="input-group-text" id="inputGroup-sizing-sm">Discount</span>
        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing">
      </div>
    </div>
  </div>

  <button class="btn-lg" data-action="click->bills-manual-input#addTax">Continue</button>
</div>
