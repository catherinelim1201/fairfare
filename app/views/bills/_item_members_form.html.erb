 <div data-controller="add-splitees">
    <div style="position: relative;">
      <div class="card-top">
        <div class="row">
          <div class="col-8">
            <span><%= item.name %></span><br>
            <small>Qty: <%= item.quantity %></small>
          </div>

          <div class="col-4" align="right" style="position: relative;">
            <strong style="position: absolute; bottom: 0; right: 1rem; font-size: 1.4rem">$<%= item.price %></strong>
          </div>
        </div>
      </div>
      <div class="card-bottom">
        <div id="item-<%= item.id %>-member-tags" >
          <%= render "item_members", item: %>
        </div>
        <div id="item-<%= item.id %>-member-select" class="card hidden" style="background: white; margin-top: 1rem; padding: 1rem;">
          <%= render "item_members_form_content", item: %>
        </div>
      </div>
      <div
        data-action="click->add-splitees#toggleForm"
        style="
        cursor: pointer;
        position: absolute; right: 2rem;
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        background: #E96479; color: white;
        font-size: 0.75rem;
        padding-left: 1rem; padding-right: 1rem;
        padding-top: 0.5rem; padding-bottom: 0.5rem;
      ">
        Add Splitees
      </div>
      <br>
    </div>
  </div>
<br>
