<div class="page-setup">

  <div class="container">
    <h1 class="my-5">How would you like to upload your bill for <%= @split.name %>?</h1>

    <div class="row">
      <div class="col-md-6">
        <div class="text-center d-flex flex-column align-items-center">
          <%= image_tag "manual-input.jpeg", class:"img-fluid", style: "height: 300px;" %>
          <%= link_to "Manual Input", new_split_bill_path(@split), class:"btn create-button mt-2 mb-5" %>
        </div >
      </div>
      <div class="col-md-6">
        <div class="text-center d-flex flex-column align-items-center">
        <%= image_tag "upload-option.jpeg", class:"img-fluid", style: "height: 300px;" %>
        <%= link_to "Upload Receipt Photo", receipt_split_bills_path(@split), class:"btn create-button mt-2 mb-5" %>
        </div>
      </div>
    </div>
  </div>
</div>
