<%= simple_form_for item, url: assign_members_item_path(item), method: :post, data: { controller: "add-splitees", action: "submit->add-splitees#update" } do |f| %>
  <div style="position: relative;">
    <div class="card-top">
      <div class="row">
        <div class="col-8">
          <span><%= item.name %></span><br>
          <small>Qty: <%= item.quantity %></small>
        </div>

        <div class="col-4" align="right" style="position: relative;">
          <strong style="position: absolute; bottom: 0; right: 1rem; font-size: 1.4rem">$<%= item.price %></strong>
        </div>
      </div>
    </div>
    <div class="card-bottom">
      <% item.members.each do |member| %>
        <span class="badge rounded-pill" style="background: #7DB9B6">
         <%= member.name %>
        </span>
      <% end %>
      <div class="card hidden" style="background: white; margin-top: 1rem; padding: 1rem;">
          <%= f.association :members, collection: item.bill.split.members, as: :check_boxes, input_html: { multiple: true } %>
          <%= f.submit "Update", class: "btn btn-sm btn-pri" %>
      </div>
    </div>
    <div
      data-action="click->add-splitees#toggleForm"
      style="
      cursor: pointer;
      position: absolute; right: 2rem;
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
      background: #E96479; color: white;
      font-size: 0.75rem;
      padding-left: 1rem; padding-right: 1rem;
      padding-top: 0.5rem; padding-bottom: 0.5rem;
    ">
      Add Splitees
    </div>
    <br>
  </div>
<br>
<% end %>
