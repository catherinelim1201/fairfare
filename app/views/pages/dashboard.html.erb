                <i class="fa-solid fa-receipt"></i>
                <%= link_to "#{bill.merchant}", split_bill_path(Split.split_sort[-3], bill), class:"text-decoration-none purple-color-text" %>
              </div>
            <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="my-3 mx-4 text-end">
    <%= link_to "See More", splits_path, class:"text-decoration-none btn create-button my-5" %>
  </div>
