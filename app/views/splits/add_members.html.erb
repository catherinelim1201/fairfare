<div class="container">

  <h1>add members</h1>


  <% @split.members.each do |member| %>
    <p><%= member.first_name %></p>
  <% end %>

  <%= simple_form_for([@split, @member]) do |f| %>
    <%= f.input :first_name, input_html: { placeholder: 'Start typing to search for contact' } %>
    <%= f.input :last_name %>
    <%= f.input :phone_number %>
    <%= f.submit %>
  <% end %>

  <h2 class="mt-4">Select existing contacts</h2>
  <ul class="list-group">
    <% @available_contacts.each do |contact| %>
      <li class="list-group-item">
        <%= link_to "#{contact.full_name} (#{contact.phone_number})", split_add_existing_contact_path(@split, contact) %>
      </li>
    <% end %>
  </ul>
</div>
