
<div class="row">
  <% @splits.each do |split| %>

    <div class="col-md-6 col-lg-4">
      <div class="d-flex flex-column align-items-center p-5">
        <%= link_to split_path(split) do %>
          <%= image_tag "payment-receipt-with-coin.jpg", class:"w-100 image-rounded" %>
        <% end %>
        <div class="my-3 text-center">
          <%= link_to"#{split.name}", split_path(split), class:"text-decoration-none btn create-button" %>
        </div>
      </div>
    </div>

  <% end %>
</div>
