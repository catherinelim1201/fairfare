<div class="page-setup">

  <div class="container">
    <h1>Create a new Split!</h1>
    <%= simple_form_for(@split) do |f| %>
      <%= f.input :name %>
      <%= f.input :date %>
      <%= f.submit "Add members", class: "split-button-large" %>
    <% end %>

    <br>

    <%= link_to "Back", root_path, class: "split-button" %>
  </div>
</div>
