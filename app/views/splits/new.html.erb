<body class="container-color">
  <div class="page-setup">

  <div class="container mt-5">
    <h1>Create a new Split!</h1>
    <%= simple_form_for(@split) do |f| %>
      <%= f.input :name %>
      <%= f.input :date %>
      <%= f.button :submit, "Add members", class:"teal-button my-3" %>
    <% end %>

    <br>

    <%= link_to "Back", root_path, class: "split-button" %>
  </div>
</div>
</body>
