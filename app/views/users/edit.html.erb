<div class="container-color">
  <div class="container pt-5">
  <div class= "d-flex justify-content-center pt-3">
    <%= image_tag "user.png", class:"img-fluid", style: "height: 130px;" %>
  </div>
  <div class= "d-flex justify-content-center">
    <h1 class="mt-3 mb-3">My Profile</h1>
  </div>
    <div class="row justify-content-center">
      <div class="splits-summary-card col-8 text-center">
        <%= simple_form_for([@user]) do |f| %>
          <%= f.input :username %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.error_notification %>
          <%= f.button :submit, "Update", class:"pink-button my-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
