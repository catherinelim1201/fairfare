<body class="container-color">
  <div class="container mt-5">
  <div class= "d-flex justify-content-center pt-3">
    <%= image_tag "user.png", class:"img-fluid", style: "height: 130px;" %>
  </div>
  <div class= "d-flex justify-content-center">
    <h1 class="mt-3 mb-3">My Profile</h1>
  </div>
    <div class="row justify-content-center">
      <div class="splits-summary-card col-8 text-center">
          <h5>Username: <%= current_user.username %></h5>
          <h5>First name: <%= current_user.first_name %></h5>
          <h5>Last name: <%= current_user.last_name %></h5>
          <div class="text-center mt-4">
            <%= link_to "Edit", edit_user_path(current_user), class: "teal-button align-text-center" %>
          </div>
      </div>
    </div>
  </div>
</body>
