<div class="container-color">

  <%= link_to destroy_user_session_path,
      data: {turbo_method: :delete},
      class: "log-out" do %>
        <%# <i class="fa-solid fa-power-off" style="color:#E96479"></i> %>
        <p class="log-out-btn">Log Out</p>
      <% end %>

  <br>

  <div class="pt-5">
    <div class= "d-flex justify-content-center pt-3">
      <%= image_tag "user.png", class:"img-fluid", style: "height: 130px;" %>
    </div>
    <div class= "d-flex justify-content-center">
      <h1 class="pt-3 mb-3" style="color:#E96479">My Profile</h1>
    </div>
      <div class="row justify-content-center">
        <div class="splits-summary-card col-8 text-center">
            <h5>Username: <%= current_user.username %></h5>
            <h5>First name: <%= current_user.first_name %></h5>
            <h5>Last name: <%= current_user.last_name %></h5>
            <div class="text-center mt-4">
              <%= link_to "Edit", edit_user_path(current_user), class: " standard-button green-button align-text-center" %>
            </div>
        </div>
      </div>
  </div>
</div>
